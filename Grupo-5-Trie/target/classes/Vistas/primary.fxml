<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" alignment="TOP_CENTER" prefHeight="482.0" prefWidth="655.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlador.PrimaryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="texto" prefHeight="35.0" prefWidth="353.0">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TextField>
            <VBox alignment="CENTER" prefHeight="100.0" prefWidth="186.0">
               <children>
                  <Button fx:id="btnGuardar" mnemonicParsing="false" onAction="#guardarDiccionario" text="Guardar Diccionario">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="btnCargar" mnemonicParsing="false" onAction="#cargarDiccionario" text="Cargar Diccionario" />
                  <Button mnemonicParsing="false" onAction="#buscarTerminacion" text="Buscar Terminacion">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
            <Button fx:id="btnJuego" mnemonicParsing="false" onAction="#empezarJuego" prefHeight="42.0" prefWidth="87.0" text="Empezar Juego !" textAlignment="CENTER" wrapText="true" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" prefHeight="55.0" prefWidth="615.0">
         <children>
            <Button fx:id="btnInsertar" mnemonicParsing="false" onAction="#insertarDic" text="Insertar Palabra">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#buscarEnDic" text="Buscar Palabra">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnEliminar" mnemonicParsing="false" onAction="#eliminarDeDic" text="Eliminar Palabra">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <opaqueInsets>
            <Insets left="10.0" right="10.0" />
         </opaqueInsets>
      </HBox>
      <Label fx:id="notificaciones" />
   </children>
</VBox>
